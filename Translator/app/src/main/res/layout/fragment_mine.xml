<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff0f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MineFragment">

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:background="@drawable/bottom_style"

    app:title="                           个人中心"
    app:titleTextColor="@color/black"
    />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@drawable/bottom_style2">

           <ImageView
               android:layout_width="80sp"
               android:layout_height="80sp"
               android:src="@drawable/me"
               android:layout_marginLeft="20sp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_marginLeft="10sp">
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Ringnix"/>
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这个人很懒，什么都不肯留下~"
                android:textColor="@color/black"
                android:layout_marginLeft="-90sp"
                android:layout_marginTop="30sp"
                android:textStyle="italic"/>








        </androidx.appcompat.widget.LinearLayoutCompat>







    </androidx.appcompat.widget.LinearLayoutCompat>


    <View
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:background="#f5f5f5"/>
    <RelativeLayout
        android:id="@+id/updatePwd"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="48sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>




    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"/>





    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ctheme"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="48sp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改主题"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>




        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_alignParentBottom="true"
            android:background="#f5f5f5"/>





    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:background="#f5f5f5"/>
    <RelativeLayout
        android:id="@+id/notice"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="48sp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统通知"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>




        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_alignParentBottom="true"
            android:background="#f5f5f5"/>





    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/policy"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="48sp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>




        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_alignParentBottom="true"
            android:background="#f5f5f5"/>





    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/about"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="48sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于APP"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>




        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_alignParentBottom="true"
            android:background="#f5f5f5"/>





    </RelativeLayout>
    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="50sp"
        android:text="退出登录"
        android:textColor="#f4a460"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#f5f5f5"/>

</androidx.appcompat.widget.LinearLayoutCompat>